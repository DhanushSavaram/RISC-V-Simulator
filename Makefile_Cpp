CC = g++
CFLAGS =
SRC = RISCV.cpp
OUT = RISCV
MEMFILE ?= example.mem  # Default value, can be overridden from the command line

all: clean $(OUT)  # Ensure 'clean' is executed before compilation

$(OUT): $(SRC)
		$(CC) $(CFLAGS) $(SRC) -o $(OUT)

run: $(OUT)
		./$(OUT) "$(MEMFILE)"   1 # Use the MEMFILE variable

clean:
		rm -f $(OUT)